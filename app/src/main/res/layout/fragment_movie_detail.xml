<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_horizontal_padding"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <ImageView
        android:id="@+id/poster_image"
        android:layout_width="160dp"
        android:layout_height="192dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/posterimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_title_text"
            android:id="@+id/movie_title_text"
            android:layout_toEndOf="@id/poster_image"
            android:layout_alignBottom="@+id/title"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/title"
            android:layout_toEndOf="@id/movie_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/release_date_text"
            android:id="@+id/release_date_label"
            android:layout_toEndOf="@id/poster_image"
            android:layout_below="@+id/title"
            android:textSize="16sp"/>
        <TextView
            android:layout_below="@+id/title"
            android:layout_toEndOf="@id/release_date_label"
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />


        <TextView
            android:layout_below="@+id/release_date"
            android:layout_toEndOf="@id/poster_image"
            android:id="@+id/vote_average_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/vote_average_label"/>
        <TextView
            android:layout_below="@+id/release_date"
            android:layout_toEndOf="@id/vote_average_label"
            android:id="@+id/vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movie_description"
        android:text="@string/movie_description"
        android:textSize="16sp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/movie_overview"
    android:textSize="16sp"/>
</LinearLayout>